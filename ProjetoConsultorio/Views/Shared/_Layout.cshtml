<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consultorio Buck</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-minty.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoConsultorio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Consultorio Buck</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="~/Consultas/Index">Consultas</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Área do Usuário</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="~/Home/Login">Login</a>
                                <a class="dropdown-item" href="~/Home/Cadastro">Cadastro</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/Home/Ajuda">Ajuda</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="~/Home/Sobre">Sobre</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <p></p>
        <p></p>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - Consultorio Buck - Todos os Direitos Reservados. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Políticas de Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
